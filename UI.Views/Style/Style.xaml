<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                    xmlns:local="clr-namespace:UI.Views.Style">

    <Style x:Key="WindowStyle" TargetType="{x:Type controls:MetroWindow}">
        <!--<Setter Property="WindowTitleBrush" Value="{DynamicResource MenuBackground}"/>
        <Setter Property="NonActiveWindowTitleBrush" Value="{DynamicResource MenuBackground}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource MenuBackground}"/>-->
        <Setter Property="WindowTransitionsEnabled" Value="False"/>
        <Setter Property="WindowState" Value="Normal"/>
        <Setter Property="UseNoneWindowStyle" Value="False"/>

        <!--<Setter Property="RightWindowCommandsOverlayBehavior" Value="Never"/>-->
        <Setter Property="Height" Value="800"/>
        <Setter Property="Width" Value="1300"/>
    </Style>

</ResourceDictionary>
